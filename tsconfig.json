{
  "compilerOptions": {
    "types": ["node", "@types/babel__core", "@types/babel__generator", "@types/babel__template", "@types/babel__traverse"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "moduleResolution": "Node",
    "module": "ESNext",
    "declaration": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}